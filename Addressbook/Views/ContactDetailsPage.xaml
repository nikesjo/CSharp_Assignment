<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:viewmodels="clr-namespace:Addressbook.ViewModels"
             x:DataType="{x:Type viewmodels:ContactDetailsViewModel}"
             
             x:Class="Addressbook.Views.ContactDetailsPage"
             Title="Contact Details">
    
    <VerticalStackLayout Margin="20">
        <Label Text="Contact" VerticalOptions="Center" VerticalTextAlignment="Center" />

        <Label Text="{Binding GetContactFromList.FirstName}"/>
        <Label Text="{Binding GetContactFromList.LastName}"/>
        <Label Text="{Binding GetContactFromList.PhoneNumber}"/>
        <Label Text="{Binding GetContactFromList.Email}"/>
        <Label Text="{Binding GetContactFromList.Address}"/>
        <Label Text="{Binding GetContactFromList.PostalCode}"/>
        <Label Text="{Binding GetContactFromList.City}"/>
        
        <Button Text="Go back to contactlist" Command="{Binding NavigatetoContactListCommand}" Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>