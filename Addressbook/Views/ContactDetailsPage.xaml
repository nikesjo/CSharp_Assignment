<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xlmns:viewmodels="clr-namespace:Addressbook.ViewModels"
             x:DataType="{x:Type viewmodels:ContactDetailsViewModel}"
             
             x:Class="Addressbook.Views.ContactDetailsPage"
             Title="Contact Details">
    
    <VerticalStackLayout Margin="20">
        <Label Text="Contact" VerticalOptions="Center" VerticalTextAlignment="Center" />

        <Entry Placeholder="First name" Text="{Binding GetContactFromList.FirstName}"/>
        <Entry Placeholder="Last name" Text="{Binding GetContactFromList.LastName}"/>
        <Entry Placeholder="Phone number" Text="{Binding GetContactFromList.PhoneNumber}"/>
        <Entry Placeholder="Email" Text="{Binding GetContactFromList.Email}"/>
        <Entry Placeholder="Address" Text="{Binding GetContactFromList.Address}"/>
        <Entry Placeholder="Postal code" Text="{Binding GetContactFromList.PostalCode}"/>
        <Entry Placeholder="City" Text="{Binding GetContactFromList.City}"/>
        
        <Button Text="Delete contact" Command="{Binding RemoveContactFromListCommand}" Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>