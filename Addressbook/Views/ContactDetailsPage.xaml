<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:viewmodels="clr-namespace:Addressbook.ViewModels"
             x:DataType="{x:Type viewmodels:ContactDetailsViewModel}"
             
             x:Class="Addressbook.Views.ContactDetailsPage"
             Title="Contact Details">
    
    <VerticalStackLayout Margin="20">
        <Label Text="Contact" VerticalOptions="Center" VerticalTextAlignment="Center" />

        <Label Text="{Binding ContactDetails.FirstName}"/>
        <Label Text="{Binding ContactDetails.LastName}"/>
        <Label Text="{Binding ContactDetails.PhoneNumber}"/>
        <Label Text="{Binding ContactDetails.Email}"/>
        <Label Text="{Binding ContactDetails.Address}"/>
        <Label Text="{Binding ContactDetails.PostalCode}"/>
        <Label Text="{Binding ContactDetails.City}"/>
    </VerticalStackLayout>
</ContentPage>