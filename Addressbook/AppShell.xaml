<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Addressbook.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Addressbook"
    
    xmlns:views="clr-namespace:Addressbook.Views"
    
    Shell.FlyoutBehavior="Disabled"
    Title="Addressbook">

    <ShellContent Title="Contact List" Route="ContactListPage" ContentTemplate="{DataTemplate views.ContactListPage}" />
    <ShellContent Title="Add Contact" Route="AddContactPage" ContentTemplate="{DataTemplate views.AddContactPage}" />
    <ShellContent Title="Contact Details" Route="ContactDetailsPage" ContentTemplate="{DataTemplate views.ContactDetailsPage}" />
    <ShellContent Title="Update Contact" Route="UpdateContactPage" ContentTemplate="{DataTemplate views.UpdateContactPage}" />

</Shell>
