<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Addressbook.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Addressbook"
    
    xmlns:views="clr-namespace:Addressbook.Views"
    
    Shell.FlyoutBehavior="Disabled"
    Title="Addressbook">

    <ShellContent Title="Contact List" ContentTemplate="{DataTemplate views:ContactListPage}" Route="ContactListPage" />
    <ShellContent Title="Add Contact" ContentTemplate="{DataTemplate views:AddContactPage}" Route="AddContactPage" />
    <ShellContent Title="Contact Details" ContentTemplate="{DataTemplate views:ContactDetailsPage}" Route="ContactDetailsPage" />
    <ShellContent Title="Update Contact" ContentTemplate="{DataTemplate views:UpdateContactPage}" Route="UpdateContactPage" />

</Shell>
